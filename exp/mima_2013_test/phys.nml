# &hs_forcing_nml /
#
# Empty namelist causes all values to take on default values.
# The default values for hs_forcing_nml are as described in:
# Held, I. M., and M. J. Suarez, 1994: A proposal for the intercomparison
# of the dynamical cores of atmospheric general circulation models.
# Bulletin of the American Meteorological Society, 75(10), 1825-1830.

 &vert_turb_driver_nml
   do_mellor_yamada       = .false.,
   do_diffusivity         = .true.,
   do_simple              = .true.,
   do_shallow_conv        = .false.,
   gust_scheme            = 'constant',
   constant_gust          = 0.0,
   use_tau                = .false./

 &diffusivity_nml
    do_entrain         = .false.,
    do_simple          = .true.,
    frac_inner         = 0.1,
    rich_crit_pbl =  1.0/

 &monin_obukhov_nml
    neutral          = .false.,
    rich_crit        = 2.0,
    stable_option    = 1 /

 &surface_flux_nml
    use_virtual_temp = .false.,
    do_simple  = .true.,
    old_dtaudv = .true. /

 &atmosphere_nml
    idealized_moist_model = .true. /

 &idealized_moist_phys_nml
    two_stream_gray      = .true.,
    turb            = .true.,
    lwet_convection = .true.,
    mixed_layer_bc  = .true.,
    do_virtual      = .false.,
    do_simple       = .true.,
    roughness_mom   = 3.21e-05,
    roughness_heat  = 3.21e-05,
    roughness_moist = 3.21e-05 /

 &spectral_init_cond_nml
    initial_temperature  = 264.0 /

 &two_stream_gray_rad_nml
    albedo_value   = 0.38,  
    linear_tau     = 0.1,
    solar_constant = 1360.,
    solar_exponent = 4.0,
    ir_tau_pole    = 1.5,
    ir_tau_eq      = 6.0,
    del_sol        = 1.4,
    atm_abs        = 0.2 /
      
 &mixed_layer_nml
    depth       = 2.42,
    tconst      = 305.,
    delta_T     = 40.,
    prescribe_initial_dist = .true.,
    evaporation = .true. /

 &qe_moist_convection_nml
    tau_bm  = 7200.0,
    rhbm    = 0.7,
    val_inc = 0.01,
    Tmin    = 160.,
    Tmax    = 350. /

 &lscale_cond_nml
    do_simple=.true.,
    do_evap = .true./

 &sat_vapor_pres_nml
    do_simple = .true. /
